  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaFeatures": {
        "classes": true,
        "experimentalObjectRestSpread": true,
        "jsx": true
      },
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "no-unused-vars": ["off"],
      "indent": ["error", 4, { "SwitchCase": 1 }],
      "max-len": ["error", { "code": 140 } ],
      "no-multiple-empty-lines": ["error", { "max": 2 }],
      "no-var": ["warn"],
      "comma-dangle": ["error", "never"],
      "quotes": ["error", "single"],
      "no-console": ["off"],
      "linebreak-style": ["error", "unix"],
      "semi": ["error", "always"]
    }
  }
