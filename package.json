{
  "name": "poor-mans-tunes",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "build": "NODE_ENV=production node node_modules/.bin/webpack -p && cp index.html dist/index.html",
    "devserver": "webpack-dev-server --hot --port 9000",
    "lint": "node_modules/.bin/eslint src",
    "deploy": "cd dist && scp -r . tux:public_html/poor-mans-tunes && cd ..",
    "precommit": "npm run lint"
  },
  "keywords": [],
  "author": "Gerhard Dickescheid <gerhard@dickescheid.de> (http://dickescheid.de)",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^3.3.7",
    "react": "^15.4.1",
    "react-autosuggest": "^8.0.0",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.1",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.7",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0",
    "sanitize-html": "^1.13.0",
    "whatwg-fetch": "^2.0.1"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.20.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.9",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "bootstrap-webpack": "0.0.5",
    "css-loader": "^0.26.1",
    "enzyme": "^2.7.1",
    "eslint": "^3.12.2",
    "eslint-plugin-react": "^6.8.0",
    "file-loader": "^0.10.0",
    "husky": "^0.13.0",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^18.1.0",
    "json-loader": "^0.5.4",
    "less": "^2.7.2",
    "less-loader": "^2.2.3",
    "nock": "^9.0.2",
    "node-sass": "^4.2.0",
    "react-addons-test-utils": "^15.4.2",
    "react-hot-loader": "^1.3.1",
    "redux-logger": "^2.7.4",
    "redux-mock-store": "^1.2.2",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.0",
    "webpack-dev-server": "^2.3.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaFeatures": {
        "classes": true,
        "experimentalObjectRestSpread": true,
        "jsx": true
      },
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "no-unused-vars": [
        "off"
      ],
      "indent": [
        "error",
        4,
        {
          "SwitchCase": 1
        }
      ],
      "max-len": [
        "error",
        {
          "code": 140
        }
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 2
        }
      ],
      "no-var": [
        "warn"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "no-console": [
        "off"
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  }
}
