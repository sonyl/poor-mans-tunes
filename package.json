{
  "name": "poor-mans-tunes",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "export NODE_ENV=test && jest",
    "test:coverage": "npm test -- --coverage",
    "test:watch": "npm test -- --watch",
    "build": "NODE_ENV=production node node_modules/.bin/webpack -p && cp index.html dist/index.html",
    "build:all": "npm run build && cd backend && npm run build && cd ..",
    "devserver": "webpack-dev-server --hot --port 9000",
    "lint": "eslint src backend/src",
    "precommit": "npm run lint",
    "flow": "flow"
  },
  "keywords": [],
  "author": "Gerhard Dickescheid <gerhard@dickescheid.de> (http://dickescheid.de)",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^3.3.7",
    "boron": "^0.2.3",
    "dateformat": "^3.0.2",
    "file-saver": "^1.3.3",
    "history": "^4.7.2",
    "m3u": "0.0.2",
    "m3u8-parser": "^4.0.0",
    "prop-types": "^15.6.0",
    "react": "^15.6.2",
    "react-autosuggest": "^9.3.2",
    "react-bs-notifier": "^4.4.5",
    "react-dom": "^15.6.2",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.9",
    "redux": "^3.7.2",
    "redux-thunk": "^2.1.0",
    "sanitize-html": "^1.16.3",
    "whatwg-fetch": "^2.0.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-jest": "^22.0.4",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "bootstrap-webpack": "^0.0.6",
    "css-loader": "^0.28.7",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "eslint": "^4.14.0",
    "eslint-plugin-flowtype": "^2.40.1",
    "eslint-plugin-react": "^7.5.1",
    "file-loader": "^1.1.6",
    "flow-bin": "^0.61.0",
    "husky": "^0.14.3",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^22.0.4",
    "json-loader": "^0.5.7",
    "less": "^2.7.2",
    "less-loader": "^4.0.5",
    "nock": "^9.1.5",
    "node-sass": "^4.7.2",
    "react-hot-loader": "^3.1.3",
    "react-test-renderer": "^15.6.2",
    "redux-logger": "^3.0.0",
    "redux-mock-store": "^1.4.0",
    "style-loader": "^0.19.1",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.3",
    "webpack-dev-server": "^2.9.7",
    "webpack-version-file": "^0.1.3"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:flowtype/recommended"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "classes": true,
        "experimentalObjectRestSpread": true,
        "jsx": true
      },
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "flowtype"
    ],
    "rules": {
      "no-unused-vars": [
        "off"
      ],
      "indent": [
        "error",
        4,
        {
          "SwitchCase": 1
        }
      ],
      "max-len": [
        "error",
        {
          "code": 140
        }
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 2
        }
      ],
      "no-var": [
        "warn"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "no-console": [
        "off"
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  }
}
